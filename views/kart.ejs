  <title>Skins</title>
</head>

<body style="background-color: #1f1f1f;">


  <%- include('./partials/headerLogado') %>



    <br>

    <div class="container text-white">

 

     


      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2  row-cols-lg-3  row-cols-xl-4 g-4">
        

        <% productsData.forEach(function(product) { %>

          <div class="col ">

            <div class="card bg-dark Wover ">
              <div class="card-header text-center bg-dark">
                <h1>
                  <%= product.name%>
                </h1>
              </div>
              <div class="card-body ">
                <h5 class="card-title text-success">R$ <%= product.value %>
                </h5>
                <a href=""><img src="../images/<%= product.img %>" alt="" class="w-100 hmax-100"> </a>
                <p class="card-text">
                  <%= product.description %>, <strong>Conjunto:</strong>
                    <span style="color:rgb(255, 0, 0)">
                      <%= product.set %>
                    </span>
                </p>
                <form action="/kart/<%=product.id%>?_method=DELETE" method="POST"> <button class="btn"
                    type="submit"><img src="../images/icons8-delete-32.png"
                      class="position-absolute top-85 end-0 translate-middle" alt=""></button> </form>
              </div>

            </div>
          </div>


          <%})%>

          

      </div>
      

       

          <div class="card-body bg-dark listkart ">
            <h5 class="card-title">Lista de compras: </h5>
            <br>
            <% productsData.forEach(function(product) { %>
              <p class="card-text">
                <%= product.name%> <span class="Productvalue">
                    <%= product.value%>
                  </span>
              </p>
              <hr style="color : #057d08 ">
              <%})%>
              <br>
              <br>
                <hr style="color : #08da63 ">
    
                <p class="card-text"  id="Totalvalue"> RS</p>
                </p>

        </div>

    </div>








    <%- include('./partials/footer') %>










      <script>
        function att() {


          var total = 0;

          var EL = document.getElementById('Totalvalue');

          var ELvalue = document.querySelectorAll('.Productvalue');


          ELvalue.forEach(function (value) {


            total += parseFloat(value.innerHTML);

          });

          EL.innerHTML = `<span style="color : #07da63 ">Total em R$:</span> <span class="Productvalue"> ${total} </sapn> `

        }

      </script>

      <script>
        window.onload = function () { att() }; 
      </script>


