<!DOCTYPE html>
<html lang="bt-br">

<head>
  <link rel="stylesheet" href="../stylesheets/style.css">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="imagem/png" href="../images/icons8-valorant-64.png" />
  <title>Skins</title>
</head>

<body style="background-color: #1f1f1f;">



          <%- include('./partials/headerADM') %>

      

              <br>
              <div class="container text-white">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2  row-cols-lg-3  row-cols-xl-4 g-4">

                  <% productsData.forEach(function(product) { %>

                    <div class="col">

                      <div class="card bg-dark Wover">
                        <div class="card-header text-center bg-dark">
                          <h1><%= product.name%></h1>
                        </div>
                        <div class="card-body ">
                          <h5 class="card-title text-success">R$ <%= product.value %></h5>
                          <a href=""><img src="../images/<%= product.img %>" alt="" class="w-100 hmax-100"> </a>
                          <p class="card-text"><%= product.description %>, <strong>Conjunto:</strong>
                            <span style="color:rgb(255, 0, 0)"> <%= product.set %> </span> </p>
                              <form action="/ADDskin/<%=product.id%>?_method=DELETE"" method="POST"> <button class="btn"type="submit"><img src="../images/icons8-delete-32.png"
                                class="position-absolute top-85 end-0 translate-middle" alt=""></button> </form>
                        </div>
                   
                      </div>
                    </div>
  

                    <%})%>

                </div>
              </div>

              <div class="clearfix"> <hr></div>

              
              <section class="container text-white">
                <h1>Cadastro de produtos</h1>
        
                <form action="" method="POST"  enctype="multipart/form-data" class="bg-dark  p-2">
                  <div class="form-group">
                    <label for="name">Nome do produto</label>
                    <input required="true" type="text" id="name" name="name" class="form-control" />
                  </div>
                  <div class="form-group">
                    <label for="value">Valor do produto</label>
                    <input required="true" type="number" id="value" name="value" class="form-control" />
                  </div>
                  <div class="form-group">
                    <label for="set">Conjunto do produto</label>
                    <input required="true" type="text" id="set" name="set" class="form-control" />
                  </div>
                  <div  class="form-group m-3 ">
                    <label for="img">Escolha a imagem</label>
                    <input type="file" accept=".png" name="img" id="img">
                  </div>
                  <div class="form-group mt-1">
                    <label for="description">Descrição do produto</label>
                    <textarea 
                    required="true"
                      type="textarea"
                      id="description"
                      name="description"
                      class="form-control"
                    ></textarea>
                  </div>
                  <div class="mt-3">
                    <div class="d-grid gap-2">
                      <button class="btn btn-primary" type="submit">Cadastrar</button>
                    </div>
                  </div>
                </form>
              </section>
     

    


              <%- include('./partials/footer') %>
















